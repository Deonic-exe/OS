# --- QUANTUM ARCH HYPRLOCK CONFIG ---

general {
    no_fade_in = false
    grace = 0
    disable_loading_bar = true
}

# 1. BACKGROUND WIDGET
background {
    monitor =
    # Path ke gambar yang sudah kita siapkan tadi
    path = $HOME/Pictures/lockscreen.png
    
    # Efek Blur (Glassmorphism)
    blur_passes = 2 # 0 matikan blur
    blur_size = 7
    noise = 0.0117
    contrast = 0.8916
    brightness = 0.8172
    vibrancy = 0.1696
    vibrancy_darkness = 0.0
}

# 2. INPUT FIELD
input-field {
    monitor =
    size = 250, 50
    outline_thickness = 3
    dots_size = 0.33 # Scale of input-field height, 0.2 - 0.8
    dots_spacing = 0.15 # Scale of dots' absolute size, 0.0 - 1.0
    dots_center = true
    dots_rounding = -1 # -1 default circle, -2 follow input-field rounding
    outer_color = rgb(33ccff) # Neon Cyan Border
    inner_color = rgb(000000) # Hitam Background
    font_color = rgb(255, 255, 255)
    fade_on_empty = true
    fade_timeout = 1000 # Milliseconds before fade_on_empty is triggered.
    placeholder_text = <i>Input Password...</i> # Text shown when empty
    hide_input = false
    rounding = -1 # -1 means complete rounding (circle/oval)
    check_color = rgb(204, 136, 34)
    fail_color = rgb(204, 34, 34) # if authentication failed, changes outer_color and fail message color
    fail_text = <i>$FAIL <b>($ATTEMPTS)</b></i> # can be set to empty
    fail_transition = 300 # transition time in ms between normal outer_color and fail_color
    
    position = 0, -20
    halign = center
    valign = center
}

# 3. LABEL JAM (Digital Clock)
label {
    monitor =
    text = cmd[update:1000] echo "$TIME"
    color = rgba(200, 200, 200, 1.0)
    font_size = 64
    font_family = JetBrains Mono Nerd Font ExtraBold
    
    position = 0, 100
    halign = center
    valign = center
}

# 4. LABEL USER 
label {
    monitor =
    text = QUANTUM ARCH
    color = rgba(33ccff, 1.0) # Neon Cyan
    font_size = 20
    font_family = JetBrains Mono Nerd Font Bold
    
    position = 0, 40
    halign = center
    valign = center
}

# 5. LABEL TIPE (Developer Edition)
label {
    monitor =
    text = Developer Edition
    color = rgba(255, 255, 255, 0.6)
    font_size = 14
    font_family = JetBrains Mono Nerd Font
    
    position = 0, 10
    halign = center
    valign = center
}
